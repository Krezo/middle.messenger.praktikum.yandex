{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "ESNext",
    "jsx": "preserve",
    "removeComments": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": ["./src/**/*"]
}
